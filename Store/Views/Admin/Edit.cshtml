@model Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductID" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div> <span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div> <span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"> </textarea>
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <div> <span asp-validation-for="Category" class="text-danger"></span></div>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <div> <span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>
    @foreach (FileModel image in Model.Images)
    {
        <img class="imageAdmin" itemprop="image" src="@Url.Content("/Files/Sm/" + image.Name)" alt="@image.Name" title="@image.Name">

        <a asp-action="RemoveImage" class="btn btn-sm btn-warning"
           asp-route-productId="@Model.ProductID" asp-route-imageName="@image.Name">
            Delete
        </a>
    }

    <div class="form-group">
        <label asp-for="Images"></label>
        <div> <span asp-validation-for="Images" class="figure-img"></span></div>
        <input type="file" name="uploadedFile" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
