@model Product
@{
    ViewData["Title"] = "@model";
}

<div class="item-box">
    <div class="info">
        <div class="breadcrumbs">
            @*<ul>
                    <li itemtype="http://data-vocabulary.org/Breadcrumb" itemscope="">
                        <a itemprop="url" href="https://flowers.ua/ru/kiev"><span itemprop="title">Доставка цветов в Киев</span></a>
                    </li>

                    <li>&nbsp;&gt;&nbsp;</li>
                    <li itemtype="http://data-vocabulary.org/Breadcrumb" itemscope="">
                        <a itemprop="url" href="https://flowers.ua/ru/cvety_v_korobke"><span itemprop="title">Цветы в коробке</span></a>
                    </li>

                    <li>&nbsp;&gt;&nbsp;</li>
                    <li>
                        Цветы в коробке &quot;151 розовая роза&quot;
                    </li>

                </ul>*@
        </div>
        <h1 itemprop="name">@Model.Name</h1>
        <div class="container2">
            <div class="visual-block">
                <div class="visual image large">
                    <div class="bg-line">&nbsp;</div>

                        @Html.Partial("Image.cshtml", @Model.Images)

                </div>
                <div class="visual video large">
                    <div class="bg-line">&nbsp;</div>
                    <div class="videowrap"></div>
                    <div class="zoomwrap">
                    </div>
                </div>
                <div class="extimgs">
                    <ul class="list">
                        @foreach (var image in Model.Images)
                        {
                            <li>
                                <img class="sm_img" src="@Url.Content("/Files/Sm/" + image.Name)" alt="@image.Name" title="@image.Name" />
                            </li>
                        }
                    </ul>
                </div>
                <div id="___plusone_0"></div>
            </div>
            <div class="holder">
                <form class="order-form" id="@Model.ProductID" asp-action="AddToCart"
                      asp-controller="Cart" method="post">
                    <fieldset>
                        <input type="hidden" asp-for="ProductID" />
                        <input type="hidden" name="returnUrl"
                               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                        <input type="hidden" name="item_variant" id="variant" value="0" />
                        <input type="hidden" id="tab" name="tab" value="1" />
                        <div class="row">
                            <ul class="tab">
                                <li class="active">
                                    <a id="tab1">
                                        <span>
                                            <em>
                                                Price
                                            </em>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                            <ul id="blocktab1" class="choice">
                                <li></li>
                                <li>
                                    <strong>@Model.Price$</strong>
                                </li>
                            </ul>
                        </div>
                        @*<div id="AddCart">
                            <button class="button">
                                Add to Cart
                            </button>
                            <i class="clear"></i>
                        </div>*@
                        <div class="note">
                            <div id="promoNote"></div>
                            <span id="regiondeliveryinfo">
                                Send products
                                &nbsp;&#151;&nbsp;
                                <strong>free</strong>
                            </span>
                        </div>
                    </fieldset>
                </form>
                <div class="description">
                    <div itemprop="description" id="itemDescr">
                        <b>Descriptoins:</b><br>@Model.Description
                        <div>
                            <br>
                        </div>
                    </div>
                    
                </div>
            </div>
            <br style="clear:both;">
        </div>
        <div class="set-proposals"></div>
    </div>
</div>