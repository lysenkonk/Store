         <h1 itemprop="name">@Model.Name</h1>
         <div class="container2">
             <div class="visual-block">
                 <div class="visual image large">
                     <div class="bg-line">&nbsp;</div>
                     @Html.Partial("Image.cshtml", @Model.Images)
                 </div>
                <div class="visual video large">
                    <div class="bg-line">&nbsp;</div>
                    <div class="videowrap"></div>
                    <div class="zoomwrap">
                    </div>
                </div>
                 <div class="extimgs">
                     <ul class="list">
                         @foreach (var image in Model.Images)
                         {
                             string id_img = "img_";
                             <li id=@id_img>         
                                 <img src="@Url.Content("/Files/Sm/" + image.Name)" alt="@image.Name" title="@image.Name" />
                             </li>
                             int count = 0;
                             id_img +=  count;
                             count++;
                         }
                     </ul>
                 </div>
                 <div id="___plusone_0"></div>
             </div>
                <div class="holder">
                    <form class="order-form" id="@Model.ProductID" asp-action="AddToCart"
                          asp-controller="Cart" method="post">
                        <fieldset>
                            <input type="hidden" asp-for="ProductID" />
                            <input type="hidden" name="returnUrl"
                                   value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                            <input type="hidden" name="item_variant" id="variant" value="0" />
                            <input type="hidden" id="tab" name="tab" value="1" />
                            <div class="row">
                                <ul class="tab">
                                    <li class="active">
                                        <a id="tab1">
                                            <span>
                                                <em>
                                                    Price
                                                </em>
                                            </span>
                                        </a>
                                    </li>
                                </ul>
                                <ul id="blocktab1" class="choice">
                                    <li></li>
                                    <li>
                                        <strong>@Model.Price$</strong>
                                    </li>
                                </ul>
                            </div>
                            <div id="AddCart">
                                <button class="button">
                                    Add to Cart
                                </button>
                                <i class="clear"></i>
                            </div>
                            <div class="note">
                                <div id="promoNote"></div>
                                <span id="regiondeliveryinfo">
                                    Доставка
                                    &nbsp;&#151;&nbsp;
                                    <strong>бесплатно</strong>
                                </span>
                            </div>
                        </fieldset>
                    </form>
                    <div class="description">
                        <div itemprop="description" id="itemDescr">
                            <b>Descriptoins:</b><br>Lorem ipsum dolor sit amet, consectetuer adipiscing elit.
                            Aenean commodo ligula eget dolor.Neque porro quisquam est qui dolorem ipsum quia dolor sit amet,
                            consectetur, adipisci velit ..."
                            <div>
                                <br>
                            </div>
                        </div>
                        <div>
                            <p>
                                Ближайшее время доставки сегодня с 18:00, при оплате заказа до 18:00.
                            </p>
                            <i style="clear:both;"></i>
                        </div>
                    </div>
                </div>
                <br style="clear:both;">
            </div>
            <div id="rev">
                <div>
                    <a name="reviews">&nbsp;</a>
                    <p class="div-head">Отзывы</p>
                    <div id="countReviews">(0)</div>
                    <div id="review"></div>
                    <div class="clear"></div>
                </div>
                <div class="feedback withoutbg"> 
                    Для этого товара еще никто не оставлял отзывов
                </div>
                <a name="addNode"></a>
                <div class="main-order-form">
                    <div class="button">
                        <div class="tr">&nbsp;</div>
                        <div class="tl">&nbsp;</div>
                        <div class="br">&nbsp;</div>
                        <div class="bl">&nbsp;</div>
                        <a class="contents altcontents jsAddReviewBtn" href="#"><span class="no-arrow">Добавить отзыв</span></a>
                    </div>
                </div>
         </div>
        <div class="set-proposals"></div>            
     </div>
 </div>