@model List<FileModel>
@if (@Model.Count > 0)
{
    <img style="width:100%;" id="#img_Bg" src="@Url.Content("/Files/Bg/" + Model[0].Name)" data-zoom-image="@Url.Content("/Files/Bg/" + Model[0].Name)" alt="@Model[0].Name" title="@Model[0].Name" class="zoom-in" />
 }
else
{
    <img style="width:100%;" id="#img_Bg" itemprop="image" src="@Url.Content("/Files/design/noPhoto.jpg")" class="zoom-in">
}