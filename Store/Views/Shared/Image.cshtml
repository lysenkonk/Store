@model Product

@if (Model.Images.Count > 0)
{
    <img style="width:100%;" id="#productImage"  itemprop="image" src="@Url.Content("/Files/Sm/" + Model.Images[0].Name)" alt="@Model.Name" title="@Model.Name" class="zoom-in">
}
else
{
    <img style="width:100%;" itemprop="image" src="@Url.Content("/Files/design/noPhoto.jpg")" alt="" title="" class="zoom-in">
}